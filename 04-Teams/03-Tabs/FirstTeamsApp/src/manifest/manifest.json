{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "id": "{{APPLICATION_ID}}",
  "version": "{{VERSION}}",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "Integrations",
    "websiteUrl": "https://{{HOSTNAME}}",
    "privacyUrl": "https://{{HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "First Teams App",
    "full": "First Teams App"
  },
  "description": {
    "short": "TODO: add short description here",
    "full": "TODO: add full description here"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [],
  "staticTabs": [
    {
      "entityId": "5c63200b-0843-4160-aa06-f9a707cd9773",
      "name": "First Demo",
      "contentUrl": "https://{{HOSTNAME}}/firstDemoTab/?name={loginHint}&tenant={tid}&theme={theme}",
      "scopes": ["personal"]
    },
    {
      "entityId": "personalTab",
      "name": "Personal Tab ",
      "contentUrl": "https://{{HOSTNAME}}/firstDemoTab/personal.html",
      "websiteUrl": "https://{{HOSTNAME}}",
      "scopes": ["personal"]
    }
  ],
  "bots": [],
  "connectors": [],
  "composeExtensions": [],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": ["{{HOSTNAME}}"]
}
